@{
    ViewData["Title"] = "Register Page";
}

@model RegisterViewModel

<h1>Register</h1>

<div class="row">
    <!-- Left column-->
    <div class="col-md-4 login-reg-image">
        <label class="h5">Hello World</label>
    </div>
    
    <div class="col-md-8">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="Name" class="form-control" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Team Name</label>
                <select class="form-control" name="TeamName" required>
                    <option value="Gryffindor">Gryffindor</option>
                    <option value="Hufflepuff">Hufflepuff</option>
                    <option value="Ravenclaw">Ravenclaw</option>
                </select>
            </div>
            
            @await Html.PartialAsync("_CustomButton", new DigiGall.Models.ButtonModel
            {
                Text = "Register",
                Class = "custom-button digi-btn-primary",
                Type = "submit",
                Attributes = "id='login-button'"
            })
        </form>
    </div>
</div>